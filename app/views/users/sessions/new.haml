%h2.text-center.mt-5=t('header.login')
%hr.border-danger.col-3.my-5.border-top
.container
  .row.justify-content-center
    /
    #form.bg-light.border.border-info
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group.mt-5
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: 'email', class: 'form-control'

        .form-group
          = f.label :password
          = f.password_field :password, autocomplete: "off", required: true, placeholder: 'Password', class: 'form-control'

        - if devise_mapping.rememberable?
          .form-group
            = f.check_box :remember_me
            = f.label :remember_me

        .form-group.text-center
          = f.submit t('header.login'), class: 'btn btn-info btn-lg btn-block'
      .text-center.my-3
        = render "users/shared/links"
